<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/baseBackgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_item_loadMore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_item_height"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/item_load_more"
            android:textColor="@color/baseLightColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_more_text"
            app:layout_constraintEnd_toStartOf="@id/tv_more_text"
            app:layout_constraintTop_toTopOf="@id/tv_more_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_item_loadError"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_item_height"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginTop="56dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_load_error"
            android:textColor="@color/baseLightColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_item_loadEnd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_item_height"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginTop="112dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_load_end"
            android:textColor="@color/baseLightColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>