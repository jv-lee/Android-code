<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="26dp">

        <com.lee.library.widget.SelectorTextView
            android:id="@+id/btn_show_loading"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:text="show Loading Dialog"
            app:buttonDisable="true"
            app:buttonRadius="23dp"
            app:disableBackgroundColor="@android:color/black"
            app:disableStrokeColor="@android:color/holo_red_dark"
            app:disableTextColor="@android:color/white"
            app:normalBackgroundColor="@android:color/holo_green_dark"
            app:normalTextColor="@android:color/black"
            app:pressedBackgroundColor="@android:color/holo_blue_bright"
            app:pressedTextColor="@android:color/white"
            app:strokeWidth="2dp" />

        <com.lee.library.widget.SelectorTextView
            android:id="@+id/btn_selector_1"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:text="show Warn Dialog"
            app:buttonDisable="false"
            app:buttonRadius="23dp"
            app:disableBackgroundColor="@android:color/black"
            app:disableStrokeColor="@android:color/holo_red_dark"
            app:disableTextColor="@android:color/white"
            app:normalBackgroundColor="@color/colorPrimary"
            app:normalTextColor="@android:color/black"
            app:pressedBackgroundColor="@color/colorThemeAccent"
            app:pressedTextColor="@android:color/white"
            app:rippleMode="defaultMode"
            app:strokeWidth="2dp" />

        <com.lee.library.widget.SelectorTextView
            android:id="@+id/btn_selector_2"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:text="show Warn Dialog"
            app:buttonDisable="false"
            app:buttonRadius="23dp"
            app:disableBackgroundColor="@android:color/black"
            app:disableStrokeColor="@android:color/holo_red_dark"
            app:disableTextColor="@android:color/white"
            app:normalBackgroundColor="@color/colorPrimary"
            app:normalTextColor="@android:color/black"
            app:pressedBackgroundColor="@color/colorThemeAccent"
            app:pressedTextColor="@android:color/white"
            app:rippleMode="stateMode"
            app:strokeWidth="2dp" />

        <com.lee.library.widget.SelectorTextView
            android:id="@+id/btn_selector_3"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:text="show Warn Dialog"
            app:buttonDisable="false"
            app:buttonRadius="23dp"
            app:disableBackgroundColor="@android:color/black"
            app:disableStrokeColor="@android:color/holo_red_dark"
            app:disableTextColor="@android:color/white"
            app:normalBackgroundColor="@color/colorPrimary"
            app:normalTextColor="@android:color/black"
            app:pressedBackgroundColor="@color/colorThemeAccent"
            app:pressedTextColor="@android:color/white"
            app:strokeWidth="2dp" />

        <com.lee.library.widget.ShadowConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadowBlur="10dp"
            app:shadowColor="#000000"
            app:shadowOffsetX="0dp"
            app:shadowOffsetY="0dp"
            app:shadowRound="23dp">

            <com.lee.library.widget.SelectorTextView
                android:id="@+id/btn_selector_4"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="show Warn Dialog"
                app:buttonDisable="false"
                app:buttonRadius="23dp"
                app:disableBackgroundColor="@android:color/black"
                app:disableStrokeColor="@android:color/holo_red_dark"
                app:disableTextColor="@android:color/white"
                app:normalBackgroundColor="@color/colorPrimary"
                app:normalStrokeColor="@color/colorPrimary"
                app:normalTextColor="@android:color/black"
                app:pressedBackgroundColor="@color/colorThemeAccent"
                app:pressedStrokeColor="@color/colorThemeAccent"
                app:pressedTextColor="@android:color/white"
                app:strokeWidth="2dp" />

        </com.lee.library.widget.ShadowConstraintLayout>

        <com.lee.library.widget.ShadowConstraintLayout
            android:id="@+id/shadow_layout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:outLineColor="@color/colorPrimary"
            app:outLineWidth="1dp"
            app:rippleEnable="true"
            app:shadowBlur="10dp"
            app:shadowColor="#000000"
            app:shadowOffsetX="0dp"
            app:shadowOffsetY="0dp"
            app:shadowRound="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is content " />

        </com.lee.library.widget.ShadowConstraintLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="this is content 《my good life》 !...."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</ScrollView>