<?xml version="1.0" encoding="utf-8"?>
<com.gionee.sadsdk.detail.view.ListMainItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <include layout="@layout/zkas_list_item_universal_layout"/>
    
    <ImageView 
        android:id="@+id/zkas_id_list_item_preview_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:paddingTop="@dimen/zkas_list_item_ml_image_top_margin"
        android:paddingBottom="@dimen/zkas_list_item_ml_image_bottom_margin"
        android:visibility="gone"
        />
    
    <LinearLayout 
        android:id="@+id/zkas_id_list_item_text_link_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zkas_list_item_ml_text_link_hight"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        
	    <TextView 
	        android:id="@+id/zkas_id_list_item_text_link_text"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/zkas_list_item_ml_text_link_flag_right_margin"
	        android:gravity="right|center_vertical"
	        android:drawableRight="@drawable/zkas_icon_arrow"
	        android:drawablePadding="@dimen/zkas_list_item_ml_text_link_text_icon_margin"
	        android:textColor="@color/zkas_list_item_text_link_text_color"
            android:textSize="@dimen/zkas_list_item_ml_text_link_content_text_size"
	        />
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/zkas_id_main_item_btm_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zkas_list_divider"
        />
</com.gionee.sadsdk.detail.view.ListMainItemView>
